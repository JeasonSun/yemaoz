    "@koa/cors": "^3.1.0",
    "axios": "^0.20.0",
    "babel-plugin-root-import": "^6.1.0",
    "bcrypt": "^5.0.0",
    "cross-env": "^7.0.2",
    "ejs": "^3.1.3",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-jwt": "^4.0.0",
